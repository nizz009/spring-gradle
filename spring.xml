<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
    <bean id="triangle-constructor" class="org.nizz.springgradle.Triangle">
        <constructor-arg value="Isosceles" />
        <constructor-arg value="20" />
    </bean>

    <bean id="triangle" class="org.nizz.springgradle.Triangle">
        <property name="type" value="Scalene" />
        <property name="height" value="25" />
    </bean>

<!--    Check springApplicationContext.xml in src/main/resources folder for further instantiations   -->
</beans>
